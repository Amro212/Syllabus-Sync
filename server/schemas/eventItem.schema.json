{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://syllabus-sync.com/schemas/eventItem.schema.json",
  "title": "EventItem",
  "description": "A syllabus event item representing an assignment, quiz, exam, etc.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the event",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "courseId": {
      "type": "string",
      "description": "Identifier for the course this event belongs to",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "courseCode": {
      "type": "string",
      "description": "Optional course code (e.g., 'CS101')",
      "pattern": "^[A-Z]{2,4}[0-9]{2,4}[A-Z]?$"
    },
    "type": {
      "type": "string",
      "enum": ["ASSIGNMENT", "QUIZ", "MIDTERM", "FINAL", "LAB", "LECTURE", "OTHER"],
      "description": "Type of the event"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Title of the event"
    },
    "start": {
      "type": "string",
      "format": "date-time",
      "description": "Start date/time of the event in ISO8601 format"
    },
    "end": {
      "type": "string",
      "format": "date-time",
      "description": "End date/time of the event in ISO8601 format"
    },
    "allDay": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is an all-day event"
    },
    "location": {
      "type": "string",
      "maxLength": 100,
      "description": "Location where the event takes place"
    },
    "notes": {
      "type": "string",
      "maxLength": 1000,
      "description": "Additional notes or description for the event"
    },
    "reminderMinutes": {
      "type": "number",
      "minimum": 0,
      "maximum": 43200,
      "description": "Minutes before the event to send a reminder (max 30 days)"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score from the parser (0-1)"
    }
  },
  "required": ["id", "courseId", "type", "title", "start"],
  "additionalProperties": false
}
